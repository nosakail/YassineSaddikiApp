<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YassineSaddikiApp.GifPage"
             >
    <ScrollView>
        <VerticalStackLayout>
            <Image 
                x:Name="stonksgif"
                Source="stonks.gif"
                HeightRequest="200" 
                HorizontalOptions="Center" 
                IsAnimationPlaying="True"/>

            <Image Source="imgpromo.png" />

            <Button 
                Text="BACK" 
                CornerRadius="10" 
                BackgroundColor="SandyBrown" 
                FontAttributes="Bold" 
                FontSize="20" 
                TextColor="White" 
                FontFamily="Oswald" 
                Padding="10"
                Margin="20" 
                Clicked="Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>