<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YassineSaddikiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:YassineSaddikiApp"
    Shell.FlyoutBehavior="Disabled"
    Title="YassineSaddikiApp">

    <TabBar x:Name="PhoneTabs">
        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}"/>
        </Tab>
        <Tab Title="Produits" Icon="buy.svg">
            <ShellContent   ContentTemplate="{DataTemplate local:SecondPage}"/>
        </Tab>
        <Tab Title="Ajouter" Icon="option.svg">
            <ShellContent   ContentTemplate="{DataTemplate local:PageThird}"/>
        </Tab>
        <Tab Title="Fourth" Icon="option.svg">
            <ShellContent  ContentTemplate="{DataTemplate local:FourthPage}"/>
        </Tab>
    </TabBar>

</Shell>
